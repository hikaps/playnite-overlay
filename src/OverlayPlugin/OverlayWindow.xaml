<Window x:Class="PlayniteOverlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#B3000000"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Focusable="True">
    <Grid x:Name="Backdrop" Background="Transparent">
        <Border x:Name="RootCard" CornerRadius="10" Background="#EE1E1E1E" Padding="24" HorizontalAlignment="Center" VerticalAlignment="Center" Width="860" Opacity="0">
            <StackPanel>
                <TextBlock x:Name="TitleText" Text="Playnite Overlay" FontSize="24" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#222" CornerRadius="6" Height="280" HorizontalAlignment="Stretch">
                        <Image x:Name="CoverImage" Stretch="UniformToFill" ClipToBounds="True" />
                    </Border>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Recently played" Foreground="#CCCCCC" Margin="0,0,0,6"/>
                        <ListBox x:Name="RecentList"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Margin="0"
                                 HorizontalContentAlignment="Stretch"
                                 Focusable="False">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,0,8"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Container" CornerRadius="6" Background="#2A2A2A" Padding="8">
                                                    <ContentPresenter />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Container" Property="Background" Value="#3A3A3A"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Container" Property="Background" Value="#383838"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="False">
                                        <Button Content="Play"
                                                Width="96" Height="32"
                                                HorizontalAlignment="Right" VerticalAlignment="Center"
                                                Margin="10,0,0,0"
                                                DockPanel.Dock="Right"
                                                CommandParameter="{Binding}"/>
                                        <Image Width="48" Height="64" Stretch="UniformToFill" Margin="0,0,10,0">
                                            <Image.Source>
                                                <BitmapImage UriSource="{Binding ImagePath}" CacheOption="OnLoad"/>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock Text="{Binding Title}" Foreground="White" VerticalAlignment="Center"/>
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Right">
                            <Button x:Name="SwitchBtn" Content="Switch Game" Margin="0,0,10,0" Padding="14,6"/>
                            <Button x:Name="ExitBtn" Content="Exit Current" Padding="14,6"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
