<Window x:Class="PlayniteOverlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#80000000"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Width="800" Height="450">
    <Grid>
        <Border CornerRadius="8" Background="#CC1E1E1E" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Playnite Overlay" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <TextBlock Text="This is a placeholder overlay."
                           Foreground="Gainsboro"/>
                <StackPanel Orientation="Horizontal" Margin="0,12,0,0" HorizontalAlignment="Right">
                    <Button x:Name="SwitchBtn" Content="Switch Game" Margin="0,0,8,0" Padding="10,4"/>
                    <Button x:Name="ExitBtn" Content="Exit Current" Padding="10,4"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>

